<?xml version="1.0" encoding="utf-8"?>

<com.example.myswipeitemrecyclerview.SwipeRevealLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/swipe_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="10dp"
    android:layout_marginTop="10dp"
    android:background="@drawable/bg_swpie_item"
    app:dragEdge="right"
    app:mode="same_level">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="70dp"
        android:orientation="horizontal">

        <FrameLayout
            android:id="@+id/star_layout"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:background="#FFEB3B">

            <TextView
                android:layout_width="70dp"
                android:layout_height="match_parent"
                android:background="#FFEB3B"
                android:gravity="center"
                android:text="Star"
                android:textColor="@android:color/white" />
        </FrameLayout>

        <FrameLayout
            android:id="@+id/delete_layout"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="@drawable/bg_secondary_swpie_item_right">

            <TextView
                android:layout_width="70dp"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="Delete"
                android:textColor="@android:color/white" />
        </FrameLayout>
    </LinearLayout>

    <FrameLayout
        android:id="@+id/front_layout"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:background="@drawable/bg_main_swpie_item">

        <TextView
            android:id="@+id/text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:textColor="@android:color/white"
            android:textSize="18sp" />
    </FrameLayout>
</com.example.myswipeitemrecyclerview.SwipeRevealLayout>
